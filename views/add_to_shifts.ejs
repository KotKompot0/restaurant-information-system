    </header>

    <!-- Begin page content -->
    <main class="flex-shrink-0">
        <div class="container">
            <h2 class="mt-5">Запись сотрудника на смену</h2>
            <form action="/add_to_shifts" method="post">
                <div class="form-group">
                  <label for="employeeID">Выберите сотрудника:</label>
                  <select class="form-control" id="employeeID" name="employeeID" required>
                    <% employees.forEach(employee => { %>
                      <option value="<%= employee.EmployeeID %>"><%= employee.FullName %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="shiftID">Выберите смену:</label>
                  <select class="form-control" id="shiftID" name="shiftID" required>
                    <% shifts.forEach(shift => { %>
                      <option value="<%= shift.ShiftID %>"><%= shift.ShiftName %></option>
                    <% }); %>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Записать на смену</button>
              </form>
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary"></span>
        </div>
    </footer>
